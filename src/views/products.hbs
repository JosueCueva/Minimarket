<div class="container mx-auto py-12">
  <h3 class="text-2xl font-semibold mb-4">Buscar Productos</h3>
  <form action="/products" method="GET" class="flex items-center">
    <input type="text" name="product" placeholder="Buscar por nombre..." class="border border-gray-200 px-4 py-2 rounded-l-lg w-full" value="{{product}}" required>
    <input type="number" name="minPrice" placeholder="Precio mínimo" class="border border-gray-200 px-4 py-2 rounded-l-none rounded-r-none w-1/4" value="{{minPrice}}" min="0">
    <input type="number" name="maxPrice" placeholder="Precio máximo" class="border border-gray-200 px-4 py-2 rounded-l-none rounded-r-lg w-1/4" value="{{maxPrice}}" min="0">
    <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-r-lg">Buscar</button>
  </form>
</div>

<div class="container mx-auto py-12">
  <h3 class="text-2xl font-semibold mb-4">Resultados de la Búsqueda</h3>
  {{#if products.length}}
    <div class="grid grid-cols-3 gap-8">
      {{#each products}}
        <div class="bg-white shadow-lg rounded-lg p-6">
          <h4 class="text-xl font-semibold mb-2">{{product}}</h4>
          <p class="text-gray-600">{{descripcion}}</p>
          <p class="text-blue-600 font-semibold mt-4">${{precio}} USD</p>
        </div>
      {{/each}}
    </div>
  {{else}}
    <p class="text-xl">No se encontraron productos que coincidan con la búsqueda.</p>
  {{/if}}
</div>