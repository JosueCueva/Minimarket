<div class="block mx-auto my-12 p-8 bg-white w-1/3 border border-gray-200 rounded-lg 
shadow-lg text-gray-800">
    <h1 class="text-3xl font-bold text-center">Registro</h1>

    <form action="" method="POST" class="mt-4">

        <input type="text" name="name" placeholder="Name" 
        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2
        bg-gray-200 focus:bg-white" required>

        <input type="email" name="email" placeholder="Email" 
        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2
        bg-gray-200 focus:bg-white" required>

        <input type="password" name="password" placeholder="Password" 
        class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2
        bg-gray-200 focus:bg-white" required pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$"
        title="La contraseña debe tener al menos 8 caracteres, incluir al menos una mayúscula, una minúscula, un número y un carácter especial (@$!%*?&)">

        <button type="submit" class="rounded-md bg-blue-500 w-full text-lg text-white
        font-semibold p-2 my-3 hover:bg-blue-600 focus:bg-blue-700">Registrarse</button>

        {{#if error}}
            <p class="text-red-500 font-bold text-lg my-3">* {{error}}</p>
        {{/if}}

    </form>
</div>